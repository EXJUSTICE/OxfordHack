<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xu.hookmeup.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/recognize_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Tap to listen"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/button_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/listen_button_main_background"
        android:clickable="true"
        android:elevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/ring_one"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/listen_button_ring_one"
        android:orientation="horizontal"
        android:padding="24dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ring_two"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/listen_button_ring_two"
        android:orientation="horizontal"
        android:padding="24dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ring_three"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/listen_button_ring_three"
        android:orientation="horizontal"
        android:padding="24dp">

    </LinearLayout>

</RelativeLayout>
